<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ConnectActivity" > 
    
	<Button
        android:id="@+id/OK_disarm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/disarmEntry"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="OK" />

    <com.example.campuscompanion_v5.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        ProgressWheel:text="10s"
        ProgressWheel:textColor="#222222"
        ProgressWheel:textSize="25sp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:barLength="60dp" 
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barWidth="25dp"
        ProgressWheel:rimWidth="25dp" 
        ProgressWheel:spinSpeed="3dp" />

    <EditText
        android:id="@+id/disarmEntry"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:digits="@string/specific_chars"
        android:ems="10"
        android:gravity="center"
        android:inputType="number" />

</RelativeLayout>