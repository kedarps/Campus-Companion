<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/RptToPolice"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="82dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_report"
        android:background="@mipmap/border_orange"/>

    <ImageView
        android:id="@+id/CheckPoint"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/RptToPolice"
        android:layout_alignTop="@+id/Connect"
        android:contentDescription="@null"
        android:src="@mipmap/ic_checkpoint"
        android:background="@mipmap/border_yellow"/>

    <ImageView
        android:id="@+id/Connect"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/Emergency"
        android:layout_below="@+id/Emergency"
        android:layout_marginTop="56dp"
        android:background="@mipmap/border_green"
        android:contentDescription="@null"
        android:src="@mipmap/ic_connect" />

    <ImageView
        android:id="@+id/Emergency"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="82dp"
        android:background="@mipmap/border_blue"
        android:contentDescription="@null"
        android:src="@mipmap/ic_emergency" />

    <TextView
        android:id="@+id/emerStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Emergency"
        android:layout_below="@+id/Emergency"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Emergency"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/rptStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emerStat"
        android:layout_alignBottom="@+id/emerStat"
        android:layout_alignRight="@+id/RptToPolice"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:text="Report"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/cntStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Connect"
        android:layout_below="@+id/Connect"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Connect"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ckptStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/CheckPoint"
        android:layout_alignTop="@+id/cntStat"
        android:layout_marginRight="12dp"
        android:text="Checkpoint"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
