<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Connect Inactive"
        android:textColor="#99CC00"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/timeDisp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="for 0 hrs 0 mins"
        android:textSize="30sp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:contentDescription="@null"
        android:src="@mipmap/help_static" />

    <ImageView
        android:id="@+id/rotate"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_action_rotate"
        android:background="@mipmap/border_white"/>
    
    <ImageView
        android:id="@+id/headset"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_headset"
        android:background="@mipmap/border_white"/>

    <ImageView
        android:id="@+id/disarm"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        android:src="@mipmap/disarm_connect"/>

    <ImageView
        android:id="@+id/snooze"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/help"
        android:layout_alignLeft="@+id/rotate"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/snooze_connect"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/disable"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/help"
        android:layout_alignRight="@+id/headset"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/disable"
        android:contentDescription="@null"/>

</RelativeLayout>
